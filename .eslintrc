{
  "plugins": ["react"],

  "parser": "babel-eslint",

  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.7.0"
    }
  },

  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "browser": true
  },

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "globals": {
    "React": true
  },

  "extends": "standard",

  "rules": {
    "indent": [
      "error",
      2,
      {"SwitchCase": 1, "flatTernaryExpressions": true}
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "no-console": [
      "warn"
    ],
    "no-unused-vars": [
      "warn", {
        "varsIgnorePattern": "React"
      }
    ],
    "comma-dangle": 0,
    "object-curly-spacing": 0,
    "react/jsx-uses-vars": 1,
  }
}
